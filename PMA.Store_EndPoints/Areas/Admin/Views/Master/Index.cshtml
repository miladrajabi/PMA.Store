@model List<PMA.Store_Domain.Masters.Entities.Master>
@inject IResourceManager _resourceManager
@{
    ViewData["Title"] = _resourceManager[SharedResource.Masters];
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">

            <div class="card-header">
                <h3>
                    <i class="fa fa-search"></i>
                    @_resourceManager[SharedResource.Masters]
                </h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-light">
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@Url.Content(item.Photo.Url)" class="img-thumbnail" />
                                </td>
                                <td>
                                    @item.FirstName
                                </td>
                                <td>
                                    @item.LastName
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            @_resourceManager[SharedResource.NoDate]
                        </tr>
                    }
                </table>
            </div>

        </div>

    </div>


</div>